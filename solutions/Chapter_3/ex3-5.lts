/* roller coaster */

const M = 3

TURNSTILE = (passenger -> TURNSTILE).

CONTROL          = CONTROL[0],
CONTROL[i:0..M]  = (when (i<M) passenger -> CONTROL[i+1]
                   |when (i==M) depart   -> CONTROL[0]
                   ).

CAR = (depart -> CAR).

||ROLLERCOASTER = (TURNSTILE || CONTROL || CAR).

