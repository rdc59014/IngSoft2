// Ejercicio 8
const MAX = 108
const MIN = 88
range T = MIN..MAX

ENCENDER = (on -> RADIO[108]),

RADIO[i:T] = (when(i>MIN) scanear -> SCAN[i-1] |
				off -> ENCENDER |
				reset -> RADIO[MAX] ),

SCAN[i:T] = (estacion[i] -> RADIO[i] |
				when(i>MIN) dec[i-1] -> SCAN[i-1]).

